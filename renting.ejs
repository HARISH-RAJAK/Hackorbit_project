<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Equipment Rental</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 p-6 font-sans">
  <div class="max-w-7xl mx-auto">
    <header class="mb-6 flex justify-between items-start md:items-center gap-4">
      <div>
        <h2 class="text-3xl font-bold text-amber-800">Equipment Rental</h2>
        <p class="text-amber-600">Rent farming equipment and tools from nearby providers</p>
      </div>
      <button class="bg-amber-500 hover:bg-amber-600 text-white px-4 py-2 rounded flex items-center">
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" stroke-width="2"><path d="M2 6h16M2 12h16M2 18h16" /></svg>
        List Your Equipment
      </button>
    </header>

    <div class="mb-6 flex flex-col md:flex-row gap-4">
      <input type="text" class="pl-10 py-2 border rounded w-full md:flex-1" placeholder="Search equipment...">
      <select class="border rounded py-2 px-3 w-full md:w-48">
        <option>All Categories</option>
        <option>Tractors</option>
        <option>Harvesters</option>
        <option>Tillers</option>
        <option>Sprayers</option>
        <option>Seeders</option>
        <option>Pumps</option>
      </select>
      <button class="bg-amber-500 hover:bg-amber-600 text-white px-4 py-2 rounded flex items-center">
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 3h18v18H3z" /></svg>
        Filter
      </button>
    </div>

    <div id="equipment-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"></div>
  </div>

  <script>
    const equipment = [
      {
        id: 1,
        name: "John Deere 5075E Tractor",
        category: "Tractors",
        description: "75 HP utility tractor perfect for medium-scale farming",
        dailyRate: 800,
        hourlyRate: 120,
        owner: "Ramesh Agri Services",
        rating: 4.8,
        distance: "3.2 km",
        available: true,
        image: "https://images.unsplash.com/photo-1517022812141-23620dba5c23?w=300&h=200&fit=crop"
      },
      {
        id: 2,
        name: "Mahindra Harvester 575 DI",
        category: "Harvesters",
        description: "Efficient combine harvester for wheat and rice",
        dailyRate: 1500,
        hourlyRate: 250,
        owner: "Singh Farm Equipment",
        rating: 4.7,
        distance: "5.8 km",
        available: true,
        image: "https://images.unsplash.com/photo-1472396961693-142e6e269027?w=300&h=200&fit=crop"
      }
    ];

    window.addEventListener('DOMContentLoaded', () => {
      const container = document.getElementById("equipment-list");

      equipment.forEach(item => {
        const card = document.createElement("div");
        card.className = `border rounded-lg shadow hover:shadow-lg transition-shadow overflow-hidden ${!item.available ? 'opacity-75' : ''}`;
        card.innerHTML = `
          <div class="relative">
            <img src="${item.image}" alt="${item.name}" class="w-full h-48 object-cover" />
            <span class="absolute top-3 right-3 px-2 py-1 text-xs text-white rounded ${item.available ? 'bg-green-500' : 'bg-red-500'}">
              ${item.available ? 'Available' : 'Rented'}
            </span>
            <span class="absolute top-3 left-3 px-2 py-1 text-xs text-white bg-amber-500 rounded">
              ${item.category}
            </span>
          </div>
          <div class="p-4 space-y-2">
            <h3 class="text-lg text-amber-800 font-semibold">${item.name}</h3>
            <p class="text-sm text-gray-600">${item.description}</p>
            <div class="flex justify-between text-sm text-gray-600">
              <div class="flex items-center space-x-1">
                <svg class="h-4 w-4 text-yellow-400" fill="currentColor"><circle cx="8" cy="8" r="8"></circle></svg>
                <span>${item.rating}</span>
              </div>
              <div class="flex items-center space-x-1">
                <svg class="h-4 w-4" fill="none" stroke="currentColor"><circle cx="8" cy="8" r="8"></circle></svg>
                <span>${item.distance}</span>
              </div>
            </div>
            <div class="text-sm text-gray-600">Owner: ${item.owner}</div>
            <div class="border-t pt-3">
              <div class="flex justify-between mb-3">
                <div class="text-center">
                  <p class="text-xs text-gray-600">Hourly</p>
                  <p class="font-bold text-amber-600">₹${item.hourlyRate}</p>
                </div>
                <div class="text-center">
                  <p class="text-xs text-gray-600">Daily</p>
                  <p class="font-bold text-amber-600">₹${item.dailyRate}</p>
                </div>
              </div>
              ${item.available ? `
                <div class="flex space-x-2">
                  <button class="flex-1 border border-amber-300 text-amber-600 px-3 py-1 text-sm rounded hover:bg-amber-50">
                    <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor"><circle cx="8" cy="8" r="8"></circle></svg>
                    Schedule
                  </button>
                  <button class="flex-1 bg-amber-500 hover:bg-amber-600 text-white px-3 py-1 text-sm rounded">Rent Now</button>
                </div>
              ` : `
                <button class="w-full bg-gray-300 text-gray-600 px-3 py-1 text-sm rounded" disabled>Currently Unavailable</button>
              `}
            </div>
          </div>
        `;
        container.appendChild(card);
      });
    });
  </script>
</body>
</html>
